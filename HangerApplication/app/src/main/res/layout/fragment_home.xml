<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    tools:context="com.example.geehy.hangerapplication.Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="72dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.03"
        android:src="@drawable/ic_photo_camera"
        app:background="@color/colorPrimary"
        app:backgroundTint="#9848d1"
        app:elevation="5dp"
        app:fabSize="normal"
        app:rippleColor="#000000" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton_delete"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="132dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.03"
        android:src="@drawable/ic_clear_24dp"
        app:background="@color/colorPrimary"
        app:backgroundTint="#9848d1"
        app:elevation="5dp"
        app:fabSize="normal"
        app:rippleColor="#000000" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton_undo"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="192dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.03"
        android:src="@drawable/ic_undo"
        app:background="@color/colorPrimary"
        app:backgroundTint="#9848d1"
        app:elevation="5dp"
        app:fabSize="normal"
        app:rippleColor="#000000"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">


            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1">

            <GridView
                android:id="@+id/home_gridview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#e7e7e7e7"
                android:columnWidth="100dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:padding="10dp"
                android:verticalSpacing="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_insert_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/home_camera_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="#9848d1"
                    android:text="♡CAMERA♡"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:visibility="visible" />

                <Button android:background="#9848d1" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:layout_gravity="bottom" android:id="@+id/home_camera_btn2" android:visibility="visible" android:textSize="20dp" android:textColor="#ffffff" android:text="CAMERA2"/>

                <Button android:background="#9848d1" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:layout_gravity="bottom" android:id="@+id/home_grab_btn" android:visibility="visible" android:textSize="20dp" android:textColor="#ffffff" android:text="Grab"/>

                <Button
                    android:id="@+id/home_gallery_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="#9848d1"
                    android:text="♡GALLERY♡"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
