<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geehy.hangerapplication.Fragments.DressFragment">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_below="@+id/calendar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="♡오늘의 코디를 추가해보세요♡"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/dress_insert_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/dress_closet_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#9848d1"
            android:text="♡Add Clothes♡"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/coordy_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#9848d1"
            android:text="♡Daily Look♡"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:visibility="visible" />
    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

</FrameLayout>
