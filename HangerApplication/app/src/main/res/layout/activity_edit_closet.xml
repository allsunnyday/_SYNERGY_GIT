<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="400dp"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/additem_imagethumb"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_gravity="center" />

    <!--
   <TextView
       android:id="@+id/select_type"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:hint="Clothing type" />
        -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#ffffff"
        android:padding="5dp">

        <TextView
            android:id="@+id/catagorytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="카테고리"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/categorytext2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tagtext"
            android:layout_alignParentEnd="true"
            android:imeOptions="actionDone"
            android:lines="1"
            android:singleLine="true"

            android:textSize="15dp"
            tools:ignore="NotSibling" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <TextView
            android:id="@+id/seasontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="계절"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/seasonspinner"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:entries="@array/season"
            android:textColor="#000000"
            android:touchscreenBlocksFocus="false"
            android:transitionGroup="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:padding="5dp">

        <TextView
            android:id="@+id/colorText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:text="색깔"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/colorText"
            android:stretchColumns="0,1,2">

            <TextView
                android:id="@+id/colorview1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:elevation="0dp"
                android:gravity="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/color_Edittext"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/colorview1"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="15dp" />

        </TableRow>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:padding="5dp">

        <TextView
            android:id="@+id/tagtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/colorText"
            android:padding="10dp"
            android:text="태그"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="NotSibling" />

        <EditText
            android:id="@+id/AddPost_HashTag_Edittext"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/color_Edittext"
            android:hint="#데이트룩, #러블리, ..."
            android:imeOptions="actionDone"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#b3b3b3"
            android:textSize="15dp"
            tools:ignore="NotSibling" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:padding="10dp">

        <Button
            android:id="@+id/additem_insertbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"

            android:background="#9848d1"
            android:text="편집"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:background="#9848d1"
            android:text="취소"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>